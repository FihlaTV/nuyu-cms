extends ../layouts/default

block content
	.container
		.two-column-layout
			img(src='/images/botox.jpg', width='500')
		.two-column-layout
			h1 NuYu Aesthetics
			div= home.blurb1
			
	.container
		hr
		.home__column-left
			h2.home__latest-news Latest News
			h4.home__news-title= news.title
			.home__humanized-time= news.humanizedTime
			.home__news-brief!= news.content.brief
			.read-more
				a(href="/blog") Read more...
		.home__column-middle
			h2.next-surgery__heading Next Surgery
			table.next-surgery__table
				each surgery in surgeries
					tr
						td= surgery.humanDate
						td= surgery.where
				
		.home__column-right
			h2.find-us__heading Find Us
			.find-us__surgery Kate's Surgery - Annalong
